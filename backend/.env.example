# Flask Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# ==================================================
# LLM Configuration (choose ONE option)
# ==================================================

# OPTION A: OpenAI API (RECOMMENDED - no local setup needed)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# OPTION B: Ollama (requires local/remote Ollama server)
# Comment out OPENAI_API_KEY above and uncomment below:
# OLLAMA_URL=http://localhost:11434
# OLLAMA_MODEL=llama3:latest

# ==================================================
# Fuseki Knowledge Graph Configuration
# ==================================================
FUSEKI_URL=http://localhost:3030
FUSEKI_DATASET=sfia
FUSEKI_USERNAME=admin
FUSEKI_PASSWORD=admin123
KG_ENABLED=true
KG_TIMEOUT=10
KG_CACHE_TTL=3600

# ==================================================
# Email Configuration (Brevo)
# ==================================================
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=Dechivo

# ==================================================
# Frontend URL (for email verification links)
# ==================================================
FRONTEND_URL=http://localhost:5173
